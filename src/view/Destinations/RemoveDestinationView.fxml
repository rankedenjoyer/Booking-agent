<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox fx:controller="controller.Destinations.ModifyDestinationsController" alignment="CENTER" styleClass="background" prefHeight="420.0" prefWidth="600.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1">
    <ImageView fitWidth="600" fitHeight="200">
        <image>
            <Image url="/image/destination.png" />
        </image>
    </ImageView>
    <Separator/>
    <Label text="Remove a Destination" styleClass="heading"/>
    <Separator/>
    <HBox alignment="CENTER">
        <Label text="Name:"/>
        <TextField fx:id="name"/>
    </HBox>
    <HBox alignment="CENTER">
        <Label text="Country:"/>
        <TextField fx:id="country"/>
    </HBox>
    <HBox>
        <Button text="Remove Destination" onAction="#handleRemoveDestination" prefWidth="300" fx:id="removeBtn"/>
        <Button text="Close" onAction="#handleExit" prefWidth="300"/>
    </HBox>
    <stylesheets>
        <URL value="@/view/style.css" />
    </stylesheets>
</VBox>
