<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox fx:controller="controller.LoginController" prefHeight="100.0" prefWidth="400.0" spacing="20" alignment="CENTER" styleClass="background"  xmlns:fx="http://javafx.com/fxml/1">
    <Separator/>
    <Label text="Login" styleClass="heading"/>
    <Separator/>
    <HBox alignment="CENTER">
        <Label text="Username:"/>
        <TextField fx:id="UsernameTf"/>
    </HBox>
    <HBox alignment="CENTER">
        <Label text="Password"/>
        <PasswordField fx:id="PasswordTf" />
    </HBox>
    <HBox alignment="BOTTOM_LEFT" spacing="0">
        <padding>
            <Insets top="0" right="0" bottom="0" left="0" />
        </padding>
        <Button text="Login" onAction="#handleLogin" prefWidth="200.0"/>
        <Button text="Exit"  onAction="#handleExit" prefWidth="200.0"/>
    </HBox>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
